<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:text="闸门编号："
            android:textSize="13sp"
            />
           <TextView
               android:id="@+id/tv_gate_STCD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="0101010101A"
               android:textSize="13sp"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="闸门名称："
               android:textSize="13sp"
               />
           <TextView
               android:id="@+id/tv_gate_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="1号节制阀"
               android:textSize="13sp"
               />
        </LinearLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="闸门状态："
               android:textSize="13sp"
               />
           <ImageView
               android:id="@+id/img_gate_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/zmjk_zm01"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_gate_mode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:text="通讯状态："
               android:textSize="13sp"
               />
            <TextView
                android:id="@+id/tv_gate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="1号节制阀"
                android:textSize="13sp"
                android:visibility="gone"
                />
           <ImageView
               android:id="@+id/img_gate_mode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/zmjk_txzc"
               />
        </LinearLayout>

     </LinearLayout>

  <TextView
      android:id="@+id/tv_detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_list_detail"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/color_list_detail_text"
      android:text="查看详情"
      android:gravity="center"
      android:textSize="15sp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/line_gray"/>


</LinearLayout>
